@using Newtonsoft.Json;
@model IEnumerable<EmployeeService.Models.Employee>
@{
    var employees = Model;
}
<div class="row">
    <div class="col-6 text-left">
        <h6>Employee List</h6>
    </div>
    <div class="col-6 text-right text-dark">
        @Html.ActionLink("Add New", "EditEmployee", "Employee")
    </div>
</div>
<div id="dv-employeeList">
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th class="d-none">EmployeeId</th>
                <th class="d-none">DepartmentId</th>
                <th>Photo</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Salary</th>
                <th>Department</th>
                <th></th>
            </tr>
        </tbody>
        <tbody>
            @{
                if (employees != null)
                {
                    foreach (var item in employees)
                    {
                        <tr>
                            <td class="d-none">@item.EmployeeId</td>
                            <td class="d-none">@item.DepartmentId</td>
                            <td><img src="@(item.PhotoUrl)" asp-append-version="true" width="50px" height="50px" /></td>
                            <td>@item.Firstname</td>
                            <td>@item.Lastname</td>
                            <td>@item.Email</td>
                            <td>@item.Phone</td>
                            <td>@item.Salary</td>
                            <td>@item.DepartmentName</td>
                            <td>
                                @Html.ActionLink("Edit", "EditEmployee", "Employee", new { id = item.EmployeeId })
                                &nbsp;
                                @Html.ActionLink("Delete", "DeleteEmployee", "Employee", new { id = item.EmployeeId })
                            </td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>
